// Development tsconfig, do not use for build
{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true
  },
  "include": ["src/**/*", "e2e/**/*"],
  "exclude": ["./client", "./build"]
}
